<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1>Gestionar: <%= game.name %></h1>
</div>
<div class="row g-3 mb-4">
  <div class="col-sm-4 d-flex flex-column gap-3">
    <h2>Game information</h2>
    <div class="d-flex align-items-center gap-5">
        <div class="d-flex align-items-center gap-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              fill="currentColor"
              class="bi bi-speedometer"
              viewBox="0 0 16 16"
            >
              <path
                d="M8 2a.5.5 0 0 1 .5.5V4a.5.5 0 0 1-1 0V2.5A.5.5 0 0 1 8 2M3.732 3.732a.5.5 0 0 1 .707 0l.915.914a.5.5 0 1 1-.708.708l-.914-.915a.5.5 0 0 1 0-.707M2 8a.5.5 0 0 1 .5-.5h1.586a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 8m9.5 0a.5.5 0 0 1 .5-.5h1.5a.5.5 0 0 1 0 1H12a.5.5 0 0 1-.5-.5m.754-4.246a.39.39 0 0 0-.527-.02L7.547 7.31A.91.91 0 1 0 8.85 8.569l3.434-4.297a.39.39 0 0 0-.029-.518z"
              />
              <path
                fill-rule="evenodd"
                d="M6.664 15.889A8 8 0 1 1 9.336.11a8 8 0 0 1-2.672 15.78zm-4.665-4.283A11.95 11.95 0 0 1 8 10c2.186 0 4.236.585 6.001 1.606a7 7 0 1 0-12.002 0"
              />
            </svg>
            <div class="d-flex flex-column align-items-start">
              <p style="margin: 0 !important">Status</p>
              <h6 class="fw-bold mb-0 text-body-emphasis">
                <%= game.isActive ? 'Active' : 'Completed' %>
              </h5>
            </div>
          </div>
      
          <% if (game.winner) { %>
              <div class="d-flex align-items-center gap-3">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trophy" viewBox="0 0 16 16">
                      <path d="M2.5.5A.5.5 0 0 1 3 0h10a.5.5 0 0 1 .5.5q0 .807-.034 1.536a3 3 0 1 1-1.133 5.89c-.79 1.865-1.878 2.777-2.833 3.011v2.173l1.425.356c.194.048.377.135.537.255L13.3 15.1a.5.5 0 0 1-.3.9H3a.5.5 0 0 1-.3-.9l1.838-1.379c.16-.12.343-.207.537-.255L6.5 13.11v-2.173c-.955-.234-2.043-1.146-2.833-3.012a3 3 0 1 1-1.132-5.89A33 33 0 0 1 2.5.5m.099 2.54a2 2 0 0 0 .72 3.935c-.333-1.05-.588-2.346-.72-3.935m10.083 3.935a2 2 0 0 0 .72-3.935c-.133 1.59-.388 2.885-.72 3.935M3.504 1q.01.775.056 1.469c.13 2.028.457 3.546.87 4.667C5.294 9.48 6.484 10 7 10a.5.5 0 0 1 .5.5v2.61a1 1 0 0 1-.757.97l-1.426.356a.5.5 0 0 0-.179.085L4.5 15h7l-.638-.479a.5.5 0 0 0-.18-.085l-1.425-.356a1 1 0 0 1-.757-.97V10.5A.5.5 0 0 1 9 10c.516 0 1.706-.52 2.57-2.864.413-1.12.74-2.64.87-4.667q.045-.694.056-1.469z"/>
                    </svg>
                  <div class="d-flex flex-column align-items-start">
                    <p style="margin: 0 !important">Ganador</p>
                    <h6 class="fw-bold mb-0 text-body-emphasis">
                      <%= game.winner.displayName %>
                    </h5>
                  </div>
                </div>
              <% } %>
    </div>
    <h2>Participantes</h2>
    <div class="list-group">
        <% game.participants.forEach(participant => { %>
        <div class="list-group-item d-flex gap-3 py-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
              </svg>
          <div class="d-flex gap-2 w-100 justify-content-between">
            <h6 class="mb-0"><%= participant.displayName %></h6>
          </div>
        </div>
        <% }) %>
      </div>
      <h2>Caches</h2>
      <div class="list-group">
        <% game.caches.forEach((cache, index) => { %>
        <div class="list-group-item d-flex gap-3 py-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-geo" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 1a3 3 0 1 0 0 6 3 3 0 0 0 0-6M4 4a4 4 0 1 1 4.5 3.969V13.5a.5.5 0 0 1-1 0V7.97A4 4 0 0 1 4 3.999zm2.493 8.574a.5.5 0 0 1-.411.575c-.712.118-1.28.295-1.655.493a1.3 1.3 0 0 0-.37.265.3.3 0 0 0-.057.09V14l.002.008.016.033a.6.6 0 0 0 .145.15c.165.13.435.27.813.395.751.25 1.82.414 3.024.414s2.273-.163 3.024-.414c.378-.126.648-.265.813-.395a.6.6 0 0 0 .146-.15l.015-.033L12 14v-.004a.3.3 0 0 0-.057-.09 1.3 1.3 0 0 0-.37-.264c-.376-.198-.943-.375-1.655-.493a.5.5 0 1 1 .164-.986c.77.127 1.452.328 1.957.594C12.5 13 13 13.4 13 14c0 .426-.26.752-.544.977-.29.228-.68.413-1.116.558-.878.293-2.059.465-3.34.465s-2.462-.172-3.34-.465c-.436-.145-.826-.33-1.116-.558C3.26 14.752 3 14.426 3 14c0-.599.5-1 .961-1.243.505-.266 1.187-.467 1.957-.594a.5.5 0 0 1 .575.411"/>
              </svg>
          <div class="d-flex flex-column">
            <h6 class="mb-0">Cache <%= index + 1 %></h6>
            <p class="mb-0 opacity-75"><b>Hint:</b> <%= cache.hint %></p>
            <% if (cache.foundBy.length > 0) { %>
                <p class="text-success mb-0 fw-bold">Encontrado por <% cache.foundBy.forEach(user => { %> <%= user.displayName %> <%
                }); %> </p> <% } else { %> <p class="text-danger mb-0 fw-bold">No encontrado </p><% } %>
          </div>
        </div>
        <% }) %>
      </div>
      <form action="/game/<%= game._id %>/reset" method="POST">
        <button type="submit" class="btn btn-danger">Reset game</button>
      </form>
  </div>
  <div class="col-sm-8">
    <div id="map" style="width: 100%; height: 80vh"></div>
  </div>
</div>

<script>
  function initMap() {
      const areaCenter = { lat: <%= game.area.center.lat %>, lng: <%= game.area.center.lng %> };
      const map = new google.maps.Map(document.getElementById("map"), {
          center: areaCenter,
          zoom: 14,
          mapId: "<%= googleMapsId %>"
      });

      <% game.caches.forEach(cache => { %>
          new google.maps.marker.AdvancedMarkerElement({
              position: { lat: <%= cache.location.lat %>, lng: <%= cache.location.lng %> },
              map: map,
              title: "<%= cache.hint %>",
              content: new google.maps.marker.PinElement({
                  borderColor: "green",
                  background: "green",
                  glyphColor: "white",
              }).element
          });
      <% }); %>
  }
</script>
